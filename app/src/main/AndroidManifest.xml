<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.byu.cs.tweeter">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FantasyLangDev">
        <activity android:name="edu.byu.cs.client.view.main.fragments.alphabetFragment"></activity>
        <activity android:name="edu.byu.cs.client.view.main.fragments.dictionaryFragment"></activity>
        <activity android:name="edu.byu.cs.client.view.main.fragments.languageCreationFragment"></activity>
        <activity android:name="edu.byu.cs.client.view.main.activities.MainActivity"></activity>
        <activity android:name="edu.byu.cs.client.view.SignupActivity"></activity>
        <activity android:name="edu.byu.cs.client.view.main.fragments.syllableFragment"></activity>
        <activity android:name="edu.byu.cs.client.view.main.fragments.translatorFragment"></activity>
        <activity android:name="edu.byu.cs.client.view.main.fragments.wordCreationFragment"></activity>
        <activity android:name="edu.byu.cs.client.view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>