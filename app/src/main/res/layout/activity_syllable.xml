<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.byu.cs.client.view.main.fragments.syllableFragment"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <Space
        android:id="@+id/firstSpace"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/beginningConsonants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your syllable beginning consonants:"
        app:layout_constraintTop_toBottomOf="@+id/firstSpace"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Space
        android:id="@+id/secondSpace"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/beginningConsonants"/>

    <EditText
        android:id="@+id/beginningConsonantsEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="beginning consonants: ex. st d"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondSpace"/>

    <Space
        android:id="@+id/thirdSpace"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/beginningConsonantsEditText"/>

    <TextView
        android:id="@+id/vowels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your syllable vowels:"
        app:layout_constraintTop_toBottomOf="@+id/thirdSpace"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Space
        android:id="@+id/fourthSpace"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/vowels"/>

    <EditText
        android:id="@+id/vowelsEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="vowels: ex. u a e"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fourthSpace"/>

    <Space
        android:id="@+id/fifthSpace"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/vowelsEditText"/>

    <TextView
        android:id="@+id/endConsonants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your syllable end consonants:"
        app:layout_constraintTop_toBottomOf="@+id/fifthSpace"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Space
        android:id="@+id/sixthSpace"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/endConsonants"/>

    <EditText
        android:id="@+id/endConsonantsEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="end consonants: ex. nt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sixthSpace"/>

    <Space
        android:id="@+id/seventhSpace"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/endConsonantsEditText"/>

    <Button
        android:id="@+id/syllableSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit syllables"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seventhSpace"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Hint: enter the consonants and vowels you wish to use for your syllables in your new language! This is handily split up to let you make many syllables depending on what you put in each box! For the examples, \'dent\' is split into \'d\', \'e\', and \'nt\'!\nExample Syllables: stu a dent\nExample Beginning Consonants: st d\nExample Vowels: u a e\nExample End Consonants: nt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/syllableSubmit"/>

</androidx.constraintlayout.widget.ConstraintLayout>